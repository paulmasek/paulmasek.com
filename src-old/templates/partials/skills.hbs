<section class="section skills js-animate-trigger-skills-content">
  {{> section-hero introduction class="skills" name="skills"}}
  <div class="container container--thin skills__inner js-animate-skills-content">
    <div class="skills__main line-segment line-segment--content line-segment--horizontal" data-line-h="skills-separator" data-line-h-from-left="true">
      <h3 class="heading-three skills__main-title">{{main-skills.title}}</h3>
      <ul class="js-animate-trigger-main-skill">
  {{#each main-skills.skills}}
        <li class="js-animate-main-skill">
          <h4 class="heading-four skills__title">{{title}}{{#if sub-title}} - {{sub-title}}{{/if}}</h4>
          {{{body}}}
        </li>
  {{/each}}
      </ul>
    </div>
    <div class="grid">
      <div class="grid__col grid__col--12-12 grid__col--sm-6-12 skills__secondary js-animate-trigger-workflow">
        <div class="skills__secondary-inner js-animate-workflow">
          <h3 class="heading-three">{{workflow.title}}</h3>
          <ul class="">
          {{#each workflow.skills}}
            <li class="">
                <h4 class="heading-four skills__title">{{title}}</h4>
                {{{body}}}
            </li>
          {{/each}}
          </ul>
        </div>
      </div>
      <div class="grid__col grid__col--12-12 grid__col--sm-6-12 skills__secondary js-animate-trigger-design">
        <div class="skills__secondary-inner js-animate-design">
          <h3 class="heading-three">{{software.title}}</h3>
          <ul class="design-tools">
          {{#each software.skills}}
            <li class="design-tools__item">
              {{title}}
            </li>
          {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{> section-anchor id="skills"}}
</section>
