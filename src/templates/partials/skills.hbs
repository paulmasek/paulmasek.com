<section class="section skills">
  {{> section-hero introduction class="skills"}}
  <div class="container container--thin skills__inner">
    <div class="skills__main line-segment line-segment--content line-segment--horizontal">
      <h3 class="heading-three">{{main-skills.title}}</h3>
      <ul class="">
  {{#each main-skills.skills}}
        <li class="">
          <h4 class="heading-four">{{title}}<span class="heading-four-alt skills__main-secondary"> - {{sub-title}}</span></h4>
          {{{content}}}
        </li>
  {{/each}}
      </ul>
      {{>line-segment horizontal=true}}
    </div>
    <div class="grid">
      <div class="grid__col grid__col--12-12 grid__col--sm-6-12 skills__secondary">
        <h3 class="heading-three">{{workflow.title}}</h3>
        <ul class="">
        {{#each workflow.skills}}
          <li class="">
              <h4 class="heading-four-alt">{{title}}</h4>
              {{{content}}}
          </li>
        {{/each}}
        </ul>
      </div>
      <div class="grid__col grid__col--12-12 grid__col--sm-6-12 skills__secondary">
        <h3 class="heading-three">{{software.title}}</h3>
        <ul class="">
        {{#each software.skills}}
          <li class="">{{title}}</li>
        {{/each}}
        </ul>
      </div>
    </div>
  </div>
  {{> section-anchor id="skills"}}
</section>
