<div class="grid timeline__perm-grid">
{{#each perm}}
  <div class="grid__col timeline__perm">
    <div class="timeline__major-period timeline__segment {{#if @last}} timeline__major-period--last{{/if}} line-segment line-segment--vertical " data-line-v="work-small-start-perm" data-line-v-class="line-segment__line--perm-branch">
      <div class="line-segment line-segment--perm-branch{{#unless @last}} line-segment--vertical line-segment--medium-separator{{/unless}}" {{#unless @last}} data-line-v="work" data-line-v-class="line-segment__line--medium-separator line-segment__line--mobile-perm-separator"{{/unless}}>
        <div class="line-segment line-segment--vertical line-segment--period-title-perm js-animate-trigger-perm-date-title" data-line-v="work-start-perm-item" data-line-v-class="line-segment__line--small-separator">
          <strong class="timeline__period-title timeline__period-title--perm timeline__period-title-content js-animate-perm-date-title">{{period}}</strong>
        </div>
        <div class="js-animate-trigger-content-module">
          <div class="timeline__content-module js-animate-content-module">
            <div class="timeline__header timeline__header--perm">
              <h3 class="heading-three timeline__perm-title">{{company}}</h3>
              <img alt="{{company}} logo" class="timeline__perm-logo" src="{{logo.src}}" />
            </div>
            <strong class="timeline__perm-role">{{role}}</strong>
          </div>
        </div>
        <div class="{{#unless @last}}line-segment line-segment--horizontal line-segment--content line-segment--hide-desktop-horizontal {{/unless}} js-animate-trigger-content-module" {{#unless @last}}data-line-h="work-horizontal"{{/unless}}>
          <div class="timeline__content-item timeline__content-item--perm timeline__content-item--last cms js-animate-content-module">
            {{{introduction}}}
            <ul class="">
            {{#each responsibilities}}
              <li class="">{{{body}}}</li>
            {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>
