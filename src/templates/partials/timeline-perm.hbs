<div class="grid">
{{#each perm}}
  <div class="grid__col grid__col--12-12 grid__col--sm-6-12 timeline__perm">
    <div class="timeline__major-period timeline__segment {{#if @last}} timeline__major-period--last{{/if}} {{#unless @last}}line-segment line-segment--vertical line-segment--medium-separator{{/unless}}">
      <strong class="timeline__period-title timeline__period-title--perm line-segment line-segment--vertical line-segment--period-title-perm">
        {{period}}
        {{>line-segment vertical=true class="line-segment__line--small-separator"}}
      </strong>
      <div class="timeline__header timeline__header--perm">
        <h3 class="heading-three timeline__perm-title">{{company}}</h3>
        <img alt="{{company}} logo" class="timeline__perm-logo" src="{{logo.src}}" />
      </div>
      <strong class="timeline__perm-role">{{role}}</strong>
      <div class="timeline__content-item timeline__content-item--perm timeline__content-item--last cms{{#unless @last}} line-segment line-segment--content line-segment--horizontal{{/unless}}">
        {{{introduction}}}
        <ul class="">
        {{#each responsibilities}}
          <li class="">{{{content}}}</li>
        {{/each}}
        </ul>
        {{#unless @last}}
          {{>line-segment horizontal=true class=""}}
        {{/unless}}
      </div>
      {{#unless @last}}
        {{>line-segment vertical=true class="line-segment__line--medium-separator"}}
      {{/unless}}
    </div>
  </div>
{{/each}}
</div>
